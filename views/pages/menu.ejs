<!DOCTYPE html>
<head>
  <% include ../partials/head %>
  <title>User Menu</title>
  <% include ../partials/main-timeline%>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <% include ../partials/profile-style%>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<% include ../partials/navbar-user%>


<div class="container db-social">
<div class="jumbotron jumbotron-fluid"></div>
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-11">
            <div class="widget head-profile has-shadow">
                <div class="widget-body pb-0">
                    <div class="row d-flex align-items-center">
                        <div class="col-xl-4 col-md-4 d-flex justify-content-lg-start justify-content-md-start justify-content-center">
                            <ul>
                                <li>
                                    <div class="counter"><%= userData.countFriend()%></div>
                                    <div class="heading" ><a href ='/menu/<%= userData.id%>/friendList'>Friends</a></div>
                                </li>
                                <li>
                                    <div class="counter"><%= friendreq%></div>
                                    <div class="heading" ><a href ='/menu/<%= userData.id%>/friendReq'>Friend Requests</a></div>
                              </li>
  
                            </ul>
                        </div>
                        <div class="col-xl-4 col-md-4 d-flex justify-content-center">
                            <div class="image-default">
                                <img class="rounded-circle" src="http://bootdey.com/img/Content/avatar/avatar5.png" alt="...">
                            </div>
                            <div class="infos">
                                <h2><%= userData.name%></h2>
                                <h4>@<%= userData.username%></h4>
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-4 d-flex justify-content-lg-end justify-content-md-end justify-content-center">
                                    <div class="dropdown">
                                        <button type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle">
                                            <i class="la la-ellipsis-h"></i>
                                        </button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="display: none; position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(0px, 35px, 0px);">
                                            <a href="#" class="dropdown-item">
                                            Report
                                            </a>
                                            <a href="#" class="dropdown-item">
                                            Block
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

