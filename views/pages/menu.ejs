            </form>
        </div>
      </div>
  </div> -->


<div class="container bootstrap snippets">
    <div class="col-md-7 col-md-offset-2">
        <div class="panel">
            <div class="panel-body">
            <% include ../partials/posting %>
        		<div class="mar-top clearfix">
        			<button class="btn btn-sm btn-primary pull-right" type="submit"><i class="fa fa-pencil fa-fw"></i> Share</button>
        			<a class="btn btn-trans btn-icon fa fa-video-camera add-tooltip" href="#" data-original-title="Add Video" data-toggle="tooltip"></a>
        			<a class="btn btn-trans btn-icon fa fa-camera add-tooltip" href="#" data-original-title="Add Photo" data-toggle="tooltip"></a>
        			<a class="btn btn-trans btn-icon fa fa-file add-tooltip" href="#" data-original-title="Add File" data-toggle="tooltip"></a>
        		</div>
        	</div>
        </div>
        <div class="panel panel-body">
    		<!-- Timeline -->
    		<!--===================================================-->
    
    			<!-- Timeline header -->
          <% timeline.forEach(post => {%>
          <div class="timeline">
            <div class="timeline-entry">
            <div class="timeline-stat">
              <div class="timeline-icon"><img src="http://bootdey.com/img/Content/avatar/avatar5.png" alt="Profile picture">
              </div>
            </div>
            <div class="timeline-label">
              <p class="mar-no pad-btm"><a href="" class="btn-link text-semibold"><%= post.User.name%></a> <%= post.content%></p>
              <% if (post.urlPhoto) {%>
                <div class="img-holder">
                  <img src="/uploads/<%= post.urlPhoto%>" alt="Image">
                </div>
              <%}%>
            </div>
            </div>
            </div>
          <%})%>
    			
    		<!--===================================================-->
    		<!-- End Timeline -->
    	</div>
    </div>
</div>
<% include ../partials/pagination%>

    
</body>
</html>
